<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Font family (size, color) -->
    <style name="title"><item name="android:textSize">@dimen/material_text_title</item></style>
    <style name="title.main"><item name="android:textColor">@color/colorPrimary</item></style>
    <style name="title.main.bold"><item name="android:textStyle">bold</item></style>
    <style name="title.text"><item name="android:textColor">@color/colorBlack</item></style>
    <style name="title.text.bold"><item name="android:textStyle">bold</item></style>

    <style name="subhead"><item name="android:textSize">@dimen/material_text_subhead</item></style>
    <style name="subhead.main"><item name="android:textColor">@color/colorPrimary</item></style>
    <style name="subhead.main.bold"><item name="android:textStyle">bold</item></style>
    <style name="subhead.text"><item name="android:textColor">@color/colorBlack</item></style>
    <style name="subhead.text.medium"><item name="android:fontFamily">sans-serif-medium</item></style>
    <style name="subhead.text.bold"><item name="android:textStyle">bold</item></style>
    <style name="subhead.white"><item name="android:textColor">@color/colorWhite</item></style>
    <style name="subhead.white.medium"><item name="android:fontFamily">sans-serif-medium</item></style>
    <style name="subhead.white.bold"><item name="android:textStyle">bold</item></style>

    <style name="body1"><item name="android:textSize">@dimen/material_text_body1</item></style>
    <style name="body1.text"><item name="android:textColor">@color/colorBlack</item></style>

    <style name="body2"><item name="android:textSize">@dimen/material_text_body2</item></style>
    <style name="body2.main"><item name="android:textColor">@color/colorPrimary</item></style>
    <style name="body2.main.bold"><item name="android:textStyle">bold</item></style>
    <style name="body2.text"><item name="android:textColor">@color/colorBlack</item></style>
    <style name="body2.text.bold"><item name="android:textStyle">bold</item></style>
    <style name="body2.light"><item name="android:textColor">@color/colorLight</item></style>
    <style name="body2.light.medium"><item name="android:fontFamily">sans-serif-medium</item></style>
    <style name="body2.white"><item name="android:textColor">@color/colorWhite</item></style>

    <style name="headline"><item name="android:textSize">@dimen/material_text_headline</item></style>
    <style name="headline.main"><item name="android:textColor">@color/colorPrimary</item></style>
    <style name="headline.main.bold"><item name="android:textStyle">bold</item></style>
    <style name="headline.text"><item name="android:textColor">@color/colorBlack</item></style>
    <style name="headline.text.bold"><item name="android:textStyle">bold</item></style>

    <style name="display1"><item name="android:textSize">@dimen/material_text_display1</item></style>
    <style name="display1.main"><item name="android:textColor">@color/colorPrimary</item></style>
    <style name="display1.main.bold"><item name="android:textStyle">bold</item></style>
    <style name="display1.text"><item name="android:textColor">@color/colorBlack</item></style>
    <style name="display1.text.bold"><item name="android:textStyle">bold</item></style>

    <style name="ListItemTitle" parent="subhead.text.medium">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItemPrice" parent="body2.main.bold">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItemCategory" parent="body2.text">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItemLocation" parent="body2.text">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItemDate" parent="body2.light">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DetailsItemTitle" parent="title.text.bold"/>

    <style name="DetailsItemPrice" parent="headline.main.bold">
        <item name="android:maxLines">1</item>
    </style>

    <style name="DetailsItemCategory" parent="subhead.text">
        <item name="android:maxLines">1</item>
    </style>

    <style name="DetailsItemLocation" parent="subhead.text">
        <item name="android:maxLines">1</item>
    </style>

    <style name="DetailsItemDate" parent="body2.main">
        <item name="android:maxLines">1</item>
    </style>

    <style name="DetailsItemDescriptionLabel" parent="subhead.text.bold">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DetailsItemDescription" parent="body1.text">
        <item name="android:lineSpacingExtra">5dp</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/material_text_button</item>
        <item name="android:background">@drawable/bg_selector_positive_button</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/material_text_button</item>
        <item name="android:background">@drawable/bg_negative_button</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorTransparent</item>
        <item name="colorControlActivated">@color/colorTransparent</item>
        <item name="colorControlHighlight">@color/colorTransparent</item>
        <item name="android:paddingLeft">@dimen/spacer4</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/colorLightGrey</item>
        <item name="android:textSize">@dimen/material_text_subhead</item>
        <item name="android:inputType">textEmailAddress|textNoSuggestions</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/bg_edittext</item>
    </style>

    <style name="EditTextPassword" parent="EditText">
        <item name="android:inputType">text|textPassword</item>
    </style>
</resources>
