<resources>
    <style name="ListItemTitle" parent="subhead.text.medium">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItemPrice" parent="subhead.main.bold">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DetailsItemTitle" parent="display1.text.medium"/>

    <style name="DetailsItemPrice" parent="headline.main.medium">
        <item name="android:maxLines">1</item>
    </style>

    <style name="DetailsItemCategory" parent="title.text">
        <item name="android:maxLines">1</item>
    </style>

    <style name="DetailsItemLocation" parent="title.text">
        <item name="android:maxLines">1</item>
    </style>

    <style name="DetailsItemDate" parent="subhead.text">
        <item name="android:maxLines">1</item>
    </style>

    <style name="DetailsItemDescriptionLabel" parent="headline.text.bold">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DetailsItemDescription" parent="title.text">
        <item name="android:lineSpacingExtra">5dp</item>
